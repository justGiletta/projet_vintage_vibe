{% extends 'layout.html.twig' %}

{% block title %} {{product.title}} {% endblock %}

{% block navbar %}{% include 'Admin/_adminnavbar.html.twig' %}{% endblock %}

{% block content %}
<div class="col-1 back m-3">
        <a href="/admin/indexProduct" class="text-reset"><span class="material-icons">keyboard_backspace</span></a>
</div>
<div class="container text-center">
    <h1>{{ product.title }} - {{ product.artist }}</h1>
    <img src="{{ product.picture }}" width="100px" height="100px" alt="Album picture">
    <p><strong>CATEGORY</strong><br>{{ product.category_name }}</p>
    <p><strong>DESCRIPTION</strong><br>{{ product.description }}</p>
    <p><strong>PRICE</strong><br>{{ product.price }}</p>
    <p><strong>QUANTITY</strong><br>{{ product.quantity }}</p>
    <div class="mb-5">
        <a href="/admin/editProduct/{{ product.id }}" class="btn btn-outline-secondary">EDIT</a>
        <button type="button" class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#delete">DELETE</button>
        <div class="modal fade" id="delete" tabindex="-1" aria-labelledby="delete" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Are you sure you want to delete this?</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">CANCEL</button>
                        <a href="/admin/deleteProduct/{{ product.id }}" class="btn btn-dark">DELETE</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block footer %}{% include 'Admin/_adminfooter.html.twig' %}{% endblock %}
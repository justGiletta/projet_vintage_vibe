{% extends 'layout.html.twig' %}

{% block title %} USER REGISTER {% endblock %}

{% block navbar %}{% include 'Layout/_navbarfront.html.twig' %}{% endblock %}

{% block content %}
<div class="container text-center">
	<div class="register mt-5 pb-5">
		<h1 class="">REGISTER</h1>
        <div class="formregister">
            <form method="POST">
        <div class="mt-3 form-group form-style">
            <label for="email">EMAIL</label>
            <input type="email" class="form-control" id="email" name="email">
        </div>
        <div class="mt-3 form-group form-style">
            <label for="firstname">FIRSTNAME</label>
            <input type="text" class="form-control" id="firstname" name="firstname">
        </div>
        <div class="mt-3 form-group form-style">
            <label for="lastname">LASTNAME</label>
            <input type="text" class="form-control" id="lastname" name="lastname">
        </div>
        <div class="mt-3 form-group form-style">
            <label for="address">ADDRESS</label>
            <input type="text" class="form-control" id="address" name="address">
        </div>
        <div class="mt-3 form-group form-style">
            <label for="password">PASSWORD</label>
            <input type="password" class="form-control" id="password" name="password">
        </div>
        <div class="mt-3 form-group form-style">
            <label for="check_pass">CONFIRM PASSWORD</label>
            <input type="password" class="form-control" id="check_pass" name="check_pass">
        </div>
        {% if errors is not empty %}
        <div class="mt-3 alert alert-secondary alert-dismissible fade show">
            {% for error in errors %}
            <p>{{ error }}</p>
            {% endfor %}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {% endif %}
        <div class="mt-3 mb-5">
            <button type="submit" class="btn btn-secondary" name="register">VALIDATE</button>
        </div>
        </form>
        </div>
	</div>
</div>
{% endblock %}

{% block footer %}{% include 'Layout/_footer.html.twig' %}{% endblock %}

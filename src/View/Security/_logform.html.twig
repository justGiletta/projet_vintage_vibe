<div class="container text-center">
	<div class="login mt-5">
		<h1 class="">LOG IN</h1>
        <div class="formlogin">
            <form method="POST">
                <div class="mt-3 form-group form-style">
                    <label for="email">EMAIL</label>
                    <input type="email" class="form-control" id="email" name="email">
                </div>
                <div class="mt-3 form-group form-style">
                    <label for="password">PASSWORD</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                {% if errors is not empty %}
                <div class="mt-3 alert alert-secondary alert-dismissible fade show">
                    {% for error in errors %}
                    <p>{{ error }}</p>
                    {% endfor %}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                {% endif %}
                <div class="mt-3">
                    <button type="submit" class="btn btn-secondary" name="register">VALIDATE</button>
                </div>
                <div class="nav-item mt-5">
                    <p class="lh-1"><a href="/security/register" class="text-reset text-uppercase">Don't have an account yet ? Register here</a><br>▼▼</p>
                </div>
            </form>
        </div>
	</div>
</div>
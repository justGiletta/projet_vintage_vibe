<div class="mb-3 text-center">
    <h1>Detail ORDER</h1>
</div>
<div class="m-5 p-3">
  <div class="border border-secondary w-100 p-3">
    <h4 class="card-subtitle mb-2">ORDER REFERENCE N°{{idInvoice}}</h4>
    <h6>DATE {{order[0]['o_created_at']}}</h6>
    <h6 class="mt-3 text-muted">{{user[0]['o_user_id']['firstname']}} {{user[0]['o_user_id']['lastname']}}</h6>
    <h6 class="text-muted">{{user[0]['o_user_id']['address']}}</h6>
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">PRODUITS</th>
          <th scope="col"> </th>
          <th scope="col"> </th>
          <th scope="col">QUANTITY</th>
          {% for item in order %}
      <tbody>
        <td><img src="{{item.p_picture}}" width="100px" height="100px" alt="Album picture"></td>
        <td>{{ item.p_title }}</td>
        <td>{{ item.p_price }} €</td>
        <td class="">{{ item.quantity }}</td>
      </tbody>
      {% endfor %}
    </table>
    <h4 class="mb-2 text-center">TOTAL ORDER {{ order[0]['o_total'] }} €</h4>
  </div>
</div>
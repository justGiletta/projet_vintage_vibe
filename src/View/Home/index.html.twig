    <section class="homeshop text-center pb-3 pt-4">
        <div><h1>OUR SHOP</h1></div>
        <div class="producthome row pt-3 pb-3">
                {% for i in 0..2 %}
                <div class="col-lg-4">
                    <div><a href="/home/showproduct/{{ products[i].id }}"><img src="{{ products[i].picture }}" width="50%" alt="product picture"></a></div>

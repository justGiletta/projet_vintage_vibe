{% extends 'layout.html.twig' %}

{% block title %} {{ product.title }} {% endblock %}

{% block navbar %}{% include 'Layout/_navbarfront.html.twig' %}{% endblock %}

{% block content %}
<div class="container text-center mt-5">
    <h1> {{product.title}} </h1>
    <h2> {{product.artist}} </h2>
    <div class="productpicture">
        <div class="row mt-3">
            <div>
                <img src="{{ product.picture }} " width="30%" height="30%" class="img-fluid">
            </div>
            <div class="mt-3">
                <p class="fs-5">ABOUT ▼▼ {{ product.description }}</p>
            </div>
            <div>
                <p class="fs-5">CATEGORY ▼▼ {{ product.category_name}}</p>
            </div>
            <div>
                <p class="fs-5">SIZE ▼▼ {{ product.size_name }}</p>
            </div>
            <div>
                <p class="fs-5">PRICE ▼▼ {{ product.price }} €</p>
            </div>
        </div>
        <div class="d-flex justify-content-center mt-3 mb-5">
            <div><button class="btn btn-outline-dark fs-5 mx-2"><a href="/Cart/addToCart/{{ product.id }}" class="text-reset text-decoration-none"><span class="material-icons fs-3">shopping_cart</span></a></button></div>
            <div><button class="btn btn-outline-dark fs-5 p-2 mx-2"><a href="/Wishlist/like/{{ product.id }}" class="text-reset text-decoration-none">WISHLIST ▼▼</a></button></div>
        </div>
    </div>
</div>
{% endblock %}

{% block footer %}{% include 'Layout/_footer.html.twig' %}{% endblock %}